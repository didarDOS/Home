<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FFFFFF"/>
            <stroke android:width="3dp"
               android:color="#FFFFFF"/>
            <corners
                android:radius="4dp"/>
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#98A9B3"/>
            <corners
                android:radius="4dp"/>
            <stroke
                android:width="1dp"
                android:color="#171717" />
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"/>
        </shape>
    </item>
</selector>